# =============================================================================
# AI Video Creator App - Environment Configuration
# =============================================================================

# Application Settings
APP_NAME=Anime Video Creator
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=7860
WORKERS=1

# ComfyUI Backend Configuration
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188
COMFYUI_PROTOCOL=http
COMFYUI_WS_PROTOCOL=ws

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/jobs.db

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379/0

# FFmpeg Configuration
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Output Configuration
OUTPUT_DIR=./outputs
TEMP_DIR=./temp
MAX_OUTPUT_SIZE_MB=500

# Video Generation Settings
DEFAULT_FPS=15
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
MAX_FRAMES=120
DEFAULT_STEPS=20
DEFAULT_CFG_SCALE=7.0

# Audio Settings
DEFAULT_VOICE=ja-JP-NanamiNeural
AUDIO_FORMAT=mp3
AUDIO_SAMPLE_RATE=22050

# Model Paths
MODELS_DIR=./models
CHECKPOINTS_DIR=./models/checkpoints
MOTION_MODULES_DIR=./models/motion_modules
LORAS_DIR=./models/loras
VAE_DIR=./models/vae

# GPU Settings
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=cuda

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Queue Settings
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT_SECONDS=600

